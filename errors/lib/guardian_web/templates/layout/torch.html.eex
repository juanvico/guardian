<html>
  <head>
    <title>Admin</title>
    <!-- Uncomment to just use the bare bones torch styles rather than the theme -->
    <!--<link rel="stylesheet" href="<%= Routes.static_path(@conn, "/torch/base.css") %>">-->
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/torch/theme.css") %>">
  </head>

  <body class="<%= Torch.PageView.body_classes(@conn) %>">
    <header>
      <section id="torch-account-info">
        <div class="torch-container">
          <%= render "_user_menu.html", assigns %>
        </div>
      </section>

      <section id="torch-nav">
        <div class="torch-container">
          <div class="torch-logo">
            <a href="/">
              <h3>Guardian</h3>
            </a>
          </div>
          <nav class="torch-nav">
            <%= link "Errors" , to: Routes.admin_error_path(@conn, :index) %>
            <%= link "Invitations" , to: Routes.admin_invitation_path(@conn, :index) %>
            <%= if admin?(@current_user) do %>
              <%= link "Application Keys" , to: Routes.admin_application_key_path(@conn, :index) %>
              <%= link "Statistics" , to: Routes.admin_statistics_path(@conn, :index) %>
              <%= link "Invoices" , to: Routes.admin_invoices_path(@conn, :index) %>
              <%= link "Assignations Info" , to: Routes.admin_assignations_report_path(@conn, :index) %>
            <% end %>
            <%= link "Notifications Config" , to: Routes.admin_notification_config_path(@conn, :index) %>
          </nav>
        </div>
      </section>
    </header>

    <%= Torch.FlashView.render("_flash_messages.html", assigns) %>
    <%= @inner_content %>
    <script src="<%= Routes.static_path(@conn, "/torch/torch.js") %>"></script>
  </body>
</html>

